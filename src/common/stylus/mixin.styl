// 定义通用的1像素下边框,与base.styl中的'@media (-webkit-min-device-pixel-ratio..'结合进行缩放,实现实际的1px,需要定义class:border-1px
border-1px($color)
  position: relative
  // after: 表示下边框
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

// 最后一行不显示1像素边框
border-none()
  &:after
    display: none

// 根据dpr显示对应的图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
